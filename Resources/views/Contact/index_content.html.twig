{% trans_default_domain 'ir_contact' %}

<div class="page-header">
    <h1>{{ 'contact.send.title'|trans }}</h1>
</div>

<form action="{{ path('ir_contact_send') }}" {{ form_enctype(form) }} method="POST" class="form-horizontal" novalidate>
    {% include 'IRContactBundle:Contact:form.html.twig' %}
    <div class="form-group">
        <div class="col-lg-offset-2 col-lg-10">
            <button type="submit" class="btn btn-primary">{{ 'contact.send.save'|trans }}</button>
        </div>
    </div>            
</form>