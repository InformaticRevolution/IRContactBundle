                <td>{{ message.email }}</td>        
            </tr>  
            <tr>
                <td>{{ 'ir_contact.admin.message.subject'|trans }}</td>
                <td>{{ message.subject }}</td>        
            </tr>
            <tr>
                <td>{{ 'ir_contact.admin.message.created_at'|trans }}</td>
                <td>{{ message.createdAt|date }}</td>
            </tr>                     
            <tr>
                <td>{{ 'ir_contact.admin.message.body'|trans }}</td>
