<div class="page-header">
    <h1>{{ message.subject }}</h1>
</div>  

<div class="well well-sm">
    <a href="{{ path('ir_contact_admin_message_delete', {'id': message.id}) }}" class="btn btn-danger">
        <i class="glyphicon glyphicon-trash"></i> {{ 'ir_contact.admin.message.action.delete'|trans }}
    </a>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        {{ 'ir_contact.admin.message.show.section.general_information'|trans }}
    </div>

    <table class="table table-bordered">
        <tbody>     
            <tr>
                <td>{{ 'ir_contact.admin.message.email'|trans }}</td>
                <td>{{ message.email }}</td>        
            </tr>
            <tr>
                <td>{{ 'ir_contact.admin.message.created_at'|trans }}</td>
                <td>{{ message.createdAt|date }}</td>
            </tr>
        </tbody>
    </table>
</div>

<div class="panel panel-default">
    <div class="panel-heading">
        {{ 'ir_contact.admin.message.show.section.message'|trans }}
    </div>
    <div class="panel-body">
        {{ message.body|nl2br }}
    </div>
</div>