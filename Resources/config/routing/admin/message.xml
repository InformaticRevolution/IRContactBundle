<?xml version="1.0" encoding="UTF-8" ?>

<routes xmlns="http://symfony.com/schema/routing"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/routing http://symfony.com/schema/routing/routing-1.0.xsd">
        
    <route id="ir_contact_admin_message_list" pattern="/" methods="GET">
        <default key="_controller">IRContactBundle:Admin/Message:list</default>
    </route>    
    
    <route id="ir_contact_admin_message_show" pattern="/{id}" methods="GET">
        <default key="_controller">IRContactBundle:Admin/Message:show</default>
    </route>    
    
    <route id="ir_contact_admin_message_delete" pattern="/{id}/delete" methods="GET">
        <default key="_controller">IRContactBundle:Admin/Message:delete</default>
    </route>
  
</routes>